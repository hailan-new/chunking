include README.md
include LICENSE
include requirements.txt
include MANIFEST.in

# Include all Python files
recursive-include contract_splitter *.py

# Include examples
recursive-include contract_splitter/examples *.py

# Include test files
recursive-include tests *.py

# Include output directory for testing
recursive-include output *.py *.md

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so

# Exclude temporary and cache files
global-exclude *.tmp
global-exclude *.temp
global-exclude .cache
global-exclude .pytest_cache
